<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TODO Al_PB Why you using custom style_dashboard_button.xml etc.. res, instead of default style.xml file ? -->
    <LinearLayout
        style="@style/dashboardLayout"
        android:paddingTop="50dp">
        <Button
            style="@style/dashboardButton"
            android:text="@string/rss"
            android:id="@+id/mRssButton" />
        <Button
            style="@style/dashboardButton"
            android:text="@string/backup"
            android:id="@+id/mBackupButton" />
    </LinearLayout>

    <LinearLayout
        style="@style/dashboardLayout"
        android:paddingBottom="50dp">
        <Button
            style="@style/dashboardButton"
            android:text="@string/restore"
            android:id="@+id/mRestoreButton" />
        <Button
            style="@style/dashboardButton"
            android:text="@string/exit"
            android:id="@+id/mExitButton" />
    </LinearLayout>

</LinearLayout>
