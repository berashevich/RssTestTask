<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#4d56ff" />
            <gradient android:angle="-90" android:startColor="#2425ab" android:endColor="#2425ab"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#4d56ff" />
            <solid android:color="#1411ff"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="30dp" />
            <stroke android:width="1dp" android:color="#4d56ff" />
            <gradient android:angle="-90" android:startColor="#4b67ff" android:endColor="#4b67ff" />
        </shape>
    </item>
</selector>